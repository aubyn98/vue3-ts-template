{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"],
      "assets": ["src/assets"],
      "comp": ["src/components"],
      "views": ["src/views"],
      "router": ["src/router"],
      "store": ["src/store"],
      "styles": ["src/common/styles"],
      "utils": ["src/common/utils"],
      "apis": ["src/common/apis"],
      "plugins": ["src/common/plugins"],
      "mixins": ["src/common/mixins"],
      "config": ["src/common/config"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
